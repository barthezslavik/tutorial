%p
  %pre
    :preserve
      #{@snippet.code}
%p
  = @snippet.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), snippets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_snippet_path(@snippet), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), snippet_path(@snippet), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

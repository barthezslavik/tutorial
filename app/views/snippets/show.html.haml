- model_class = Snippet
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @snippet.name
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @snippet.category_id
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @snippet.code
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @snippet.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), snippets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_snippet_path(@snippet), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), snippet_path(@snippet), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

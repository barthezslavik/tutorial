= simple_form_for @snippet, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :category_id
  = f.input :code
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), snippets_path, :class => 'btn'
